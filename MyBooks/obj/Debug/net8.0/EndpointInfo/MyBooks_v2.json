{
  "openapi": "3.0.1",
  "info": {
    "title": "RohitBooks",
    "version": "v2"
  },
  "paths": {
    "/api/Books/add-book": {
      "post": {
        "tags": [
          "Books"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BookVM"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/BookVM"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/BookVM"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
